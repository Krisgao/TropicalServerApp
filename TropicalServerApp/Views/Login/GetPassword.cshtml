@model TropicalServerApp.Models.GetInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Get Your Password</title>
</head>
<body>
    <div>
        <div id="BodyDetail" style="height: 280px; width: 400px; margin: 100px auto; background-color: #FF6600; color: #FFFFFF; padding: 10px;">


            <label id="Loginlbl" for="Tracking">Tell Us your User ID Please!</label>
            <div id="loginBox" style="height: 220px; margin-top: 10px; width: 400px; background-color: #FFCC00;">

                <form action="verify" method="post">
                    <label id="useridlbl" style="color: White; font-family: Calibri; font-size: 13pt; margin-left: 20px;" for="useridtextbox">UserName: </label>
                    <input id="useridtextbox" style="width: 200px; color:black; margin-top: 50px; margin-left: 24px;" name="Username" type="text"><br>

                    <span style="padding-left: 30px; margin-top: 20px;">We will send your password by email!</span><br />

                    <div id="login" style="margin-top: 30px; text-align: center;">


                        <input id="loginButton" style="margin-left: 50px; background-color:darkgreen; color:white;" name="submit" type="submit" value="Send">
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
